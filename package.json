{
  "name": "@fluido/ui",
  "version": "0.3.2-beta.1",
  "description": "A framework for create front-end easy and fast",
  "keywords": [
    "fluido",
    "front-end",
    "styled",
    "styled-components",
    "goober",
    "chakra",
    "react",
    "hooks",
    "framework",
    "layout"
  ],
  "author": {
    "email": "morbden.dev@gmail.com",
    "name": "Morbden"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Morbden/fluido-ui"
  },
  "main": "index.js",
  "scripts": {
    "dev": "run-p dev:tsc dev:alias",
    "dev:tsc": "tsc -w",
    "dev:alias": "tsc-alias -w",
    "build": "run-s build:clear build:tsc build:alias",
    "build:clear": "rimraf components containers contexts hooks settings styled types utilities",
    "build:tsc": "tsc",
    "build:alias": "tsc-alias",
    "pub": "npm publish --access public",
    "pub:beta": "npm publish --access public --tag beta",
    "pub:alpha": "npm publish --access public --tag alpha",
    "pub:all": "run-s build pub"
  },
  "license": "MIT",
  "dependencies": {
    "@ctrl/tinycolor": "^3.4.0",
    "@popperjs/core": "^2.10.1",
    "crypto-js": "^4.1.1",
    "csso": "^4.2.0",
    "deep-equal": "^2.0.5",
    "deepmerge": "^4.2.2",
    "react-hotkeys-hook": "^3.4.0",
    "react-popper": "^2.2.5",
    "style-vendorizer": "^2.1.1",
    "use-double-tap": "^1.3.3",
    "use-resize-observer": "^8.0.0"
  },
  "peerDependencies": {
    "framer-motion": "^4.x.x",
    "react": ">=16.8.0 <=17.x.x",
    "react-dom": ">=16.8.0 <=17.x.x"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.0.2",
    "@types/csso": "^4.2.0",
    "@types/deep-equal": "^1.0.1",
    "@types/deepmerge": "^2.2.0",
    "@types/node": "16.7.10",
    "@types/react": "17.0.19",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "tsc-alias": "^1.3.9",
    "typescript": "^4.4.2",
    "webpack": "^5.52.0"
  }
}
