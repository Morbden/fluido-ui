{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "outDir": ".",
    "baseUrl": ".",
    "paths": {
      "ui-components/*": ["src/components/*"],
      "ui-containers/*": ["src/containers/*"],
      "ui-effects/*": ["src/effects/*"],
      "ui-hooks/*": ["src/hooks/*"],
      "ui-settings/*": ["src/settings/*"],
      "ui-types/*": ["src/types/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
